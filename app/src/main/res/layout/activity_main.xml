<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/grantPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Permission"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- Auto Brightness Toggle Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control Auto Brightness"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Brightness is currently: Unknown"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/toggleBrightnessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Auto Brightness"
        android:textSize="16sp"
        android:enabled="false"
        android:layout_marginBottom="32dp" />

    <!-- Instructions Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To add Quick Settings tile:\n\n1. Pull down Quick Settings\n2. Tap the pencil icon to edit\n3. Find 'Auto Brightness' tile\n4. Drag it to your active tiles"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />
</LinearLayout>